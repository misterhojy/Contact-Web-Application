
<% content_for :title, "Friends" %>

<table class="table table-striped table-border table-hover">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @friends.any? %>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>
          <td><%= link_to "Show", friend, class: "btn btn-light btn-sm" %></td>
          <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-secondary btn-sm" %></td>
          <td><%= button_to "Destroy", friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    <% else %>
      <tr>
        <td colspan="8" class="text-center">No friends found.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-primary" %>
